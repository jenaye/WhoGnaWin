{% extends 'base.html.twig' %}
{% block title %}WhognaWin - Tous les matchs{% endblock %}
{% block body %}
    <h1>Liste des matchs</h1>


    <a class="btn btn-primary" href="{{ path('game_new', { 'gender': 'male' }) }}">Créer un  match homme</a>
    <a class="btn btn-primary"  href="{{ path('game_new', { 'gender': 'female' }) }}">Créer un match femme</a>
    <br/><br/>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Type de terrain</th>
                <th>Joueur 1</th>
                <th>Joueur 2</th>
                <th>Joueur 1 score</th>
                <th>Joueur 2 score</th>
                <th>Date de la rencontre</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for game in games %}
            <tr>
                <td><a href="{{ path('game_show', { 'id': game.id}) }}">{{ game.id }}</a></td>
                <td>{{ game.terrain }}</td>
                <td>{{ game.player1 }}</td>
                <td>{{ game.player2 }}</td>
                <td>{{ game.player1score }}</td>
                <td>{{ game.player2score }}</td>
                <td>{% if game.date %}{{ game.date|date('Y-m-d') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a class="badge badge-primary" href="{{ path('game_show', { 'id': game.id }) }}">afficher</a>
                        </li>
                        <li>
                            <a class="badge badge-warning" href="{{ path('game_edit', { 'id': game.id,'gender': game.player1.getGender }) }}">editer</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
