{% extends 'base.html.twig' %}

{% block body %}
    <h1>Game</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ game.id }}</td>
            </tr>
            <tr>
                <th>Type de terrain</th>
                <td>{{ game.terrain }}</td>
            </tr>
            <tr>
                <th>Météo</th>
                <td>{{ game.meteo }}</td>
            </tr>
            <tr>
                <th>Joueur 1</th>
                <td>{{ game.player1 }}</td>
            </tr>
            <tr>
                <th>Joueur 2</th>
                <td>{{ game.player2 }}</td>
            </tr>
            <tr>
                <th>Joueur 1 score</th>
                <td>{{ game.player1score }}</td>
            </tr>
            <tr>
                <th>Joueur 2 score</th>
                <td>{{ game.player2score }}</td>
            </tr>
            <tr>
                <th>Date de la rencontre</th>
                <td>{% if game.date %}{{ game.date|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('game_index') }}">Retour a la liste</a>
        </li>
        <li>
            <a href="{{ path('game_edit', { 'id': game.id, 'gender': game.player1.getGender  }) }}">Edition</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Supprimer">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
